<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity" tools:layout_editor_absoluteY="142dp" tools:layout_editor_absoluteX="32dp">


        <TextView
                android:textColor="@color/black"
                android:textAlignment="textStart"
                android:textSize="18dp"
                android:text="Min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textViewMin"
                app:layout_constraintEnd_toEndOf="@+id/editTextNumberMin"
                app:layout_constraintStart_toStartOf="@+id/editTextNumberMin"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintBottom_toTopOf="@+id/editTextNumberMin" android:layout_marginBottom="10dp"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editTextNumberMin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.287"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"/>
        <TextView
                android:textColor="@color/black"
                android:textAlignment="textStart"
                android:textSize="18dp"
                android:text="Max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textViewMax"

                app:layout_constraintStart_toStartOf="@+id/editTextNumberMax"
                app:layout_constraintEnd_toEndOf="@+id/editTextNumberMax" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintBottom_toTopOf="@+id/editTextNumberMax" android:layout_marginBottom="10dp"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editTextNumberMax"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.144"
                app:layout_constraintTop_toBottomOf="@+id/editTextNumberMin" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.497"/>
        <Button
                android:text="Generate"
                android:layout_width="174dp"
                android:layout_height="55dp" android:id="@+id/btnGenerate"
                app:layout_constraintEnd_toEndOf="@+id/editTextNumberMax"
                app:layout_constraintStart_toStartOf="@+id/editTextNumberMax"
                app:layout_constraintTop_toBottomOf="@+id/editTextNumberMax" android:layout_marginTop="32dp"/>
        <TextView
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="25dp"
                android:text="Result: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textViewResult"
                app:layout_constraintTop_toBottomOf="@+id/btnGenerate"
                android:layout_marginTop="44dp" app:layout_constraintEnd_toEndOf="@+id/btnGenerate"
                app:layout_constraintStart_toStartOf="@+id/btnGenerate"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>