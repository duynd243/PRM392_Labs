<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:paddingVertical="20dp" android:paddingHorizontal="30dp"
                                                   android:background="@color/white"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:textStyle="bold"
            android:textColor="#4A4949"
            android:textSize="24dp"
            android:text="John Doe"
            android:layout_width="280dp"
            android:layout_height="wrap_content" android:id="@+id/tvName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp" app:srcCompat="@drawable/ic_mail" android:id="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/tvName"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="@+id/tvName"/>
    <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp" app:srcCompat="@drawable/ic_edit" android:id="@+id/icEdit"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
    />
    <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp" app:srcCompat="@drawable/ic_phone" android:id="@+id/icPhone"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintStart_toStartOf="@+id/imageView"
            android:layout_marginTop="16dp"/>
    <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp" app:srcCompat="@drawable/ic_trash" android:id="@+id/icTrash"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="40dp"
    />
    <TextView
            android:textSize="18dp"
            android:text="Email address"
            android:layout_width="200dp"
            android:layout_height="wrap_content" android:id="@+id/tvEmail"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toEndOf="@+id/imageView" android:layout_marginStart="28dp"
    />
    <TextView
            android:textSize="18dp"
            android:text="Phone number"
            android:layout_width="200dp"
            android:layout_height="wrap_content" android:id="@+id/tvPhone"
            app:layout_constraintTop_toTopOf="@+id/icPhone"
            app:layout_constraintBottom_toBottomOf="@+id/icPhone"
            app:layout_constraintStart_toEndOf="@+id/icPhone" android:layout_marginStart="28dp"
            />
    <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp" app:srcCompat="@drawable/ic_gender" android:id="@+id/icGender"
            app:layout_constraintTop_toBottomOf="@+id/icPhone" app:layout_constraintStart_toStartOf="@+id/icPhone"
            android:layout_marginTop="16dp"/>
    <TextView
            android:textSize="18dp"
            android:text="Gender"
            android:layout_width="200dp"
            android:layout_height="wrap_content" android:id="@+id/tvGender"
            app:layout_constraintTop_toTopOf="@+id/icGender"
            app:layout_constraintBottom_toBottomOf="@+id/icGender" app:layout_constraintStart_toEndOf="@+id/icGender"
            android:layout_marginStart="28dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>