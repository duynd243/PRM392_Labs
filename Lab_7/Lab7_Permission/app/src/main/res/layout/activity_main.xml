<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Request Location Permission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnRequestLocationPermission"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="260dp"
            app:layout_constraintHorizontal_bias="0.498"/>
    <Button
            android:text="Open Permission Settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnPermissionSettings"
            app:layout_constraintTop_toBottomOf="@+id/btnRequestLocationPermission" app:layout_constraintEnd_toEndOf="@+id/btnRequestLocationPermission"
            app:layout_constraintStart_toStartOf="@+id/btnRequestLocationPermission" android:layout_marginTop="32dp"
    />
</androidx.constraintlayout.widget.ConstraintLayout>