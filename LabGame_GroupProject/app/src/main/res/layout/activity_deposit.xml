<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DepositActivity">

    <Button
            android:backgroundTint="#2E2E2E"
            android:text="Deposit"
            android:layout_width="280dp"
            android:layout_height="48dp" android:id="@+id/btnDeposit"
            app:layout_constraintTop_toBottomOf="@+id/edtDepositAmount"
            android:layout_marginTop="44dp" app:layout_constraintEnd_toEndOf="@+id/edtDepositAmount"
            app:layout_constraintStart_toStartOf="@+id/edtDepositAmount" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:hint="Enter deposit amount"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/edtDepositAmount"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.497" android:minHeight="48dp"/>
    <ImageView
            android:layout_width="304dp"
            android:layout_height="125dp" app:srcCompat="@drawable/multiverse_logo" android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="92dp"
            app:layout_constraintHorizontal_bias="0.495"/>
    <TextView
            android:text="Copyright Â© 2022 Multiverse Studio."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginBottom="32dp"/>
    <TextView
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="#662EAC"
            android:textAlignment="center"
            android:text="View Team Members"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvTeamMembers"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView" android:layout_marginTop="35dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>